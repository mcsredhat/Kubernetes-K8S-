### mysql.env
# Pod Configuration
POD_NAME="database"
IMAGE="mysql"
TAG="8.0"
CONTAINER_PORT="3306"
NAMESPACE="production"
LABELS="app=mysql,version=8.0,environment=development"
ANNOTATIONS="description=MySQL pod for database exploration,created-by=kubectl-advanced-deployment"
ENV_VAR_1="MYSQL_ROOT_PASSWORD=SecureRootPass123"
ENV_VAR_2="MYSQL_DATABASE=testdb"
ENV_VAR_3="MYSQL_USER=appuser"
ENV_VAR_4="MYSQL_PASSWORD=AppUserPass123"
ENV_VAR_5="ENVIRONMENT=development"
CONTAINER_NAME="database"
PORT_NAME="mysql"
OUTPUT_FILE="database-secure.yaml"

# Security Configuration
USER_ID="999"
GROUP_ID="999"
FS_GROUP_ID="999"

# Resource Configuration
MEMORY_REQUEST="256Mi"
CPU_REQUEST="250m"
MEMORY_LIMIT="512Mi"
CPU_LIMIT="500m"

# Application Configuration
APP_NAME="mysql"
CONFIG_MOUNT_PATH="/etc/mysql/conf.d"
CONFIG_FILE_NAME="mysql-config"
INIT_MOUNT_PATH="/docker-entrypoint-initdb.d"
DATA_MOUNT_PATH="/var/lib/mysql"
LOGS_MOUNT_PATH="/var/log/mysql"

# Probe Configuration
LIVENESS_INITIAL_DELAY="30"
LIVENESS_PERIOD="10"
LIVENESS_TIMEOUT="5"
LIVENESS_FAILURE_THRESHOLD="3"
READINESS_INITIAL_DELAY="10"
READINESS_PERIOD="5"
READINESS_TIMEOUT="3"
READINESS_FAILURE_THRESHOLD="3"
STARTUP_INITIAL_DELAY="10"
STARTUP_PERIOD="10"
STARTUP_TIMEOUT="5"
STARTUP_FAILURE_THRESHOLD="30"
